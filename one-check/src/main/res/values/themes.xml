    <!--CardView-->
    <style name="CardViewPrimary" parent="CardView">
        <item name="cardCornerRadius">@dimen/dm_16</item>
        <item name="cardElevation">@dimen/dm_4</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <!--Button-->
    <style name="ButtonPrimary" parent="@style/Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/white_smoke</item>
        <item name="textAllCaps">false</item>
