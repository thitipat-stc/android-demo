    <style name="DialogFail" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/dm_16</item>
        <!--<item name="android:background">@color/alert_danger</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle.Red</item>-->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
