<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--TextInputLayout-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>-->
        <!--<item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>-->
        <item name="boxBackgroundColor">@color/fields_input_selector</item>
        <!--<item name="boxBackgroundColor">@android:color/transparent</item>-->
        <!--<item name="boxStrokeColor">@color/fields_stroke_selector</item>-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextColor">@color/orange</item>
        <!--<item name="boxCornerRadiusBottomEnd">@dimen/dm_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dm_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dm_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/dm_8</item>-->
    </style>


    <!--Edittext-->
    <style name="InputPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/dm_10</item>
        <item name="android:paddingEnd">@dimen/dm_32</item>
        <item name="android:background">@drawable/fields_input_selector</item>
        <item name="android:padding">10dp</item>
    </style>


    <!--CircularProgressIndicator-->
    <style name="AppTheme.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall">
        <item name="trackColor">@color/yellow</item>
        <item name="indicatorColor">@color/accent</item>
    </style>


    <!--AlertDialog-->
    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/dm_16</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TitleTextStyle.White" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/white</item>
